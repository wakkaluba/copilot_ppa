{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "strict": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@test/*": ["tests/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "dist"
  ]
}
